package serialization;

import java.io.FileInputStream;
import java.io.ObjectInputStream;

public class PersonDeserializationDemo {

	public static void main(String[] args) {
		
		try {
			FileInputStream fis = new FileInputStream("D://Users//Rice//Documents//CogentWorkspace//TextFiles//Person.ser");
			ObjectInputStream ois = new ObjectInputStream(fis);
//			int i;
//			while ((i = fis.read()) != -1)
//			{
				Object obj = ois.readObject();
				Person person = (Person)obj;
				System.out.println("Person Roll Number: " + person.getRollNum());
				System.out.println("Person Name: " + person.getName());
				System.out.println("Person Age: " + person.getAge());
				System.out.println("Person Address: " + person.getAddress());
//			}
			fis.close();
			ois.close();
		} catch (Exception e) {
			System.out.println(e);
		}
		
	}
	
}
