package gl.itp.hyd65.cs65.Royce;

import java.util.Random;

public class Advisor {

	String[] message;
	
	Advisor()
	{
		message = new String[5];
	}
	
	public String getAdvice()
	{
		Random rand = new Random();
		int option = rand.nextInt(5) + 1;
		String advice;
		switch (option)
		{
			case 1:
				return message[0];
				break;
			case 2:
				return message[1];
				break;
			case 3:
				return message[2];
				break;
			case 4:
				return message[3];
				break;
			case 5:
				return message[4];
				break;
		}
		
		
	}
	
	
}
