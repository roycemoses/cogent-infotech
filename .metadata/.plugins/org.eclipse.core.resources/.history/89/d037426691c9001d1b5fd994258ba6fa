package esg.itp.shape;

public class Square implements Polygon {

	float side;
	
	Square(float s)
	{
		this.side = s;
	}
	
	public void calcArea()
	{
		this.area = s*s;
	}
	
	public void calcPeri()
	{
		this.perimeter = s+s;
	}
	
	void display()
	{
		System.out.println("Area: " + this.area);
		System.out.println("Perimeter: " + this.perimeter);
	}
	
}
